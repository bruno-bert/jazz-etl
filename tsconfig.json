{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "lib": ["es6"],
    "removeComments": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "packages/jazz-core/src/types"]
  }
}
